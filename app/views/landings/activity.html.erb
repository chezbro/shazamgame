<div class="top-100 position-relative row">
  <div class="col-md-12">
    <div class="position-relative">
      <% if Rails.env.development? %>
        <div class="text-align-center col-xs-3 col-md-3">
          <h4 class="text-underline">Announcements</h4>
          <p><%= announce Announcement.newest, hide_message: "" %></p>
        </div>

        <div class="text-align-center col-xs-3 col-md-3">
          <h4 class="text-underline">Top Scores for the Week</h4>
          <%= render partial: "layouts/weekly_leaderboard" %>
        </div>

        <div class="text-align-center col-xs-3 col-md-3">
          <h4 class="text-underline">Top Scores for the Season</h4>
          <%= render partial: "layouts/cumulative_leaderboard" %>
        </div>

        <div class="text-align-center col-xs-3 col-md-3">
          <h4 class="text-underline">Previous Champions</h4>
          <%= render partial: "layouts/previous_champions" %>
        </div>
      <% else %>
        <div class="text-align-center col-xs-12">
          <h4>Welcome to the New Shazam!</h4>
          <h4>New Application Coming Soon</h4>
        </div>
      <% end %>
    </div>
  </div>
</div>