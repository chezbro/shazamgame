<div class="top-100 position-relative row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3 style="text-align:center;margin:25px 0px 5px 0px;">Favorite Teams</h3>
    <p style="text-align:center;"><small><em>Don't see your Favorite Teams or want to add more? Edit them <%= link_to "here", edit_user_registration_path(current_user) %>.</em></small></p>
    <table class="table table-bordered table-striped table-responsive">
      <thead>
        <tr>
          <th>
            User
          </th>
          <th>
            Favorite Teams
          </th>
          <% if current_user.admin? %>
            <th>
              Admin Edit
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% User.all.each do |user| %>
        <tr>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= user.fav_teams %>
          </td>
          <% if current_user.admin? %>
          <td>
              <%= link_to "#{user.name}", edit_admin_user_path(user.id) %>
          </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
</table>
  </div>
</div>
