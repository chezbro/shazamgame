<%- model_class = Week -%>
<div class="page-header">
  <h1><%=t '.title', :default => Week %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:week_number) %></dt>
      <dd><pre class="prettyprint"><%= @week.week_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:year) %></dt>
      <dd><pre class="prettyprint"><%= @week.year %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:year_in_datetime) %></dt>
      <dd><pre class="prettyprint"><%= @week.year_in_datetime %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              weeks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_week_path(@week), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              week_path(@week),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

