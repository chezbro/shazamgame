<div class="col-md-7 col-md-offset-3">
  <%= form_for @week, url: weeks_path(@week), method: :post do |f| %>
    <%= f.fields_for :games do |ff, index| %>
    <div class="margin-20-0">
      <h4>Game <%= ff.options[:child_index] + 1 %>:</h4>
      <%= ff.select :home_team_id, list_teams, {include_blank: "Select Home Team"}, {class: "selectpicker", required: true} %> 

      <%= ff.select :away_team_id, list_teams, {include_blank: "Select Away Team" }, {class: "selectpicker", required: true} %>

      <%= ff.select :home_team_spread, options_for_select( (-100..100).step(0.5).map{|n| n%1 == 0 ? n.to_i : n} ), {include_blank: "Select Home Team Spread"}, {class: "selectpicker"} %>
      <%= ff.hidden_field :game_selected_by_admin, value: true %>
    </div>
    <% end %>
    <%= f.submit "Create New Week", data: { confirm: 'Are you sure you want to create a New Week?' }, class: "btn btn-primary" %>
  <% end %>
</div>