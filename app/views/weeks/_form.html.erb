<%= form_tag weeks_path, :html => { :class => 'form-horizontal form-model' } do %>
  <% @games_in_week.each do |game| %>
    <%= fields_for 'games[]', game do |f| %>
      <div class="form-group">
        <%= f.label :week_number, :class => 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.select :home_team, Team.all.map { |t| [t.region + "" + t.name, t.id] }, include_blank: "Select Home Team" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :year, :class => 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.select :away_team, Team.all.map { |t| [t.region + "" + t.name, t.id] }, include_blank: "Select Away Team" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :year_in_datetime, :class => 'control-label col-md-2' %>
        <div class="col-md-10">
          <%= f.select "spread", options_for_select( (0..25).step(0.5).map{|n| n%1 == 0 ? n.to_i : n} ), include_blank: "Select Home Team Spread"%>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= submit_tag "Submit Picks", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

