<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1><%=t ".title", default: "Sign Up For Shazam 13" %></h1>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name, class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.text_field :name, class: "text-field form-control", html: {spellcheck: "false"} %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :username, class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.text_field :username, class: "text-field form-control", html: {spellcheck: "false"} %>
      </div>
    </div>
    

    <div class="form-group">
      <%= f.label :cell_phone_number, "Cell Phone Number", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.text_field :cell_phone_number, class: "text-field form-control", html: {autocomplete: "off"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.email_field :email, class: "text-field form-control", html: {spellcheck: "false"} %>
      </div>
    </div>
      

    <div class="form-group">
      <%= f.label :address, "Address", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.text_area :address, class: "text-field form-control height-100", html: {autocomplete: "off"} %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :fav_teams, "Favorite Team(s)", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.text_field :fav_teams, class: "text-field form-control", html: {autocomplete: "off"} %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :password, class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.password_field :password, class: "text-field form-control", html: {autocomplete: "off"} %>
      </div>
    </div>
       
    <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirmation", class: "control-label col-md-4" %>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, class: "text-field form-control", html: {autocomplete: "off"} %>
      </div>
    </div>

       
    <div class="form-group">
      <div style="float:right;">
      <%# START add reCAPTCHA %>
        <%= flash[:recaptcha_error] %>
        <%= recaptcha_tags %>
      <%# END add reCAPTCHA %>
      </div>
      <div class="col-md-offset-4 col-md-8">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>

    </div>

    <div class="form-group">
      <div class="col-md-offset-4 col-md-8">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  <% end %>

</div>