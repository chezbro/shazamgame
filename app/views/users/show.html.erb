<div class="top-100 position-relative row">
  <div class="col-sm-10 col-sm-offset-1">
    <h3>User Info</h3>
    <table class="table table-bordered table-striped table-responsive">
      <thead>
        <tr>
          <th>
            Username
          </th>
          <th>
            Name
          </th>
          <th>
            Address
          </th>
          <th>
            Cell Phone Number
          </th>
          <th>
            Favorite Teams
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= @user.username %>
          </td>
          <td>
            <%= @user.name %>
          </td>
          <td>
            <%= @user.address %>
          </td>
          <td>
            <%= @user.cell_phone_number %>
          </td>
          <td>
            <%= @user.fav_teams %>
          </td>
        </tr>
      </tbody>
</table>
  </div>
</div>


