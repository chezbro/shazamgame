<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => Game %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:points) %></dt>
      <dd><pre class="prettyprint"><%= @game.points %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:is_home_team) %></dt>
      <dd><pre class="prettyprint"><%= @game.is_home_team %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:spread) %></dt>
      <dd><pre class="prettyprint"><%= @game.spread %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:home_team_id) %></dt>
      <dd><pre class="prettyprint"><%= @game.home_team_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:away_team_id) %></dt>
      <dd><pre class="prettyprint"><%= @game.away_team_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:home_team_pref_pick) %></dt>
      <dd><pre class="prettyprint"><%= @game.home_team_pref_pick %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:away_team_pref_pick) %></dt>
      <dd><pre class="prettyprint"><%= @game.away_team_pref_pick %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:home_team_spread_pick) %></dt>
      <dd><pre class="prettyprint"><%= @game.home_team_spread_pick %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:away_team_spread_pick) %></dt>
      <dd><pre class="prettyprint"><%= @game.away_team_spread_pick %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:home_team_covered_spread) %></dt>
      <dd><pre class="prettyprint"><%= @game.home_team_covered_spread %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:away_team_covered_spread) %></dt>
      <dd><pre class="prettyprint"><%= @game.away_team_covered_spread %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tie_game) %></dt>
      <dd><pre class="prettyprint"><%= @game.tie_game %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:game_selected_by_admin) %></dt>
      <dd><pre class="prettyprint"><%= @game.game_selected_by_admin %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

