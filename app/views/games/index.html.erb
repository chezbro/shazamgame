<div class="top-50 position-relative col-md-10 col-md-offset-1">
  <h3>Make Selections for Week 1</h3>
  <div class="divTable">
  <div class="divTableBody">

  <div class="divTableRow">
    <div class="divTableCell"><h4 class="text-align-center">Home Team</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Away Team</h4></div>
    <div class="divTableCell"><h4 class="">Preference Amount</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Spread Pick</h4></div>
    <div class="divTableCell"><h4 class="">Preference Pick</h4></div>
  </div>
  
  <% @games.each do |game| %>
    <div class="divTableRow">
    <div class="divTableCell"><%= game_home_team_name(game) %></div>
    <div class="divTableCell"><%= game_away_team_name(game) %></div>
    <div class="divTableCell">
      <%= simple_form_for @selection, remote: true do |f| %>
        <%= f.select :pref_pick_int,  pref_pick_integers, {:prompt => 'Wager Points'}, {class: "selectpicker"} %>
    </div>
    <div class="divTableCell">
      <%= f.input_field :spread_pick_team, as: :radio_buttons, collection: [["FAV:" + " " + game_home_team_name(game), game.home_team_id],["DOG:" + " " + game_away_team_name(game), game.away_team_id]], :item_wrapper_class => 'inline', :checked => false, class: "selection-radio-button" %>
    </div>

    <div class="divTableCell">
      <%= f.input_field :pref_pick_team, as: :radio_buttons, collection: [["FAV:" + " " + game_home_team_name(game), game.home_team_id],["DOG:" + " " + game_away_team_name(game), game.away_team_id]], :item_wrapper_class => 'inline', :checked => false, class: "selection-radio-button" %>
    </div>

    <div>
      <%= f.hidden_field :game_id,  value: game.id %>
      <%= f.hidden_field :user_id,  value: current_user.id %>
    </div>

    </div>
    <% end %>
  <% end %>
  <%#= submit_tag "Submit Selections", id: "submit-picks", class: "btn btn-primary" %>
  </div>
  </div>
</div>

