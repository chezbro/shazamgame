<div class="top-50 position-relative col-md-10 col-md-offset-1">
  <h3>Hi <%= current_user.username.capitalize %>, here's your Picksheet for this Week:</h3>
  <div class="divTable orangeGamesTable">
  <div class="divTableBody">

  <div class="divTableRow">
    <div class="divTableCell"><h4 class="text-align-center">Week Number</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Home Team</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Away Team</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Spread</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Pref Amount</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Pref Pick</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Spread Pick</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Selection</h4></div>
  </div>

    
      <% @week.games.each do |game| %>
        <div class="divTableRow">
          <div class="divTableCell"><%= "#{game.week.id}" %></div>
          <div class="divTableCell"><%= game_home_team_name(game) %></div>
          <div class="divTableCell"><%= game_away_team_name(game) %></div>
          <div class="divTableCell"><%= game.home_team.region + " " + spread_operator(game) + game.spread.to_s %></div>
          <div class="divTableCell"><%= users_pref_int_selection(game) %></div>
          <div class="divTableCell"><%= team_name(users_pref_pick_selection(game))%></div>
          <div class="divTableCell"><%= team_name(users_spread_pick_selection(game))%></div>

          <!-- If Game is not Active you should still show full table except last column (selection) -->
          <% if current_user.selections.where(game_id: game).present? %>
            <div class="divTableCell"><%= link_to "Edit Selection", edit_game_selection_path(game.id, current_user.get_users_selections(game)) if game.active? %></div>
          <% else %>
            <div class="divTableCell"><%= link_to "Make New Selection", new_game_selection_path(game) if game.active? %></div>
          <% end %>
        </div>
      
    <% end %>
  </div>
  </div>

<br>
<h3>Past Selections</h3>
<div class="divTable orangeGamesTable">
  <div class="divTableBody">

  <div class="divTableRow">
    <div class="divTableCell"><h4 class="text-align-center">Week Number</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Home Team</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Away Team</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Spread</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Pref Amount</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Pref Pick</h4></div>
    <div class="divTableCell"><h4 class="text-align-center">Spread Pick</h4></div>
    
  </div>

    <% @weeks.each do |week| %>
      <% week.games.each do |game| %>
        <div class="divTableRow">
          <div class="divTableCell"><%= "#{week.id}" %></div>
          <% if game.home_team_id? %>
          <div class="divTableCell"><%= game_home_team_name(game) %></div>
          <div class="divTableCell"><%= game_away_team_name(game) %></div>
          <div class="divTableCell"><%= game.home_team.region + spread_operator(game) + game.spread.to_s %></div>
          <div class="divTableCell"><%= users_pref_int_selection(game) %></div>
          <div class="divTableCell"><%= team_name(users_pref_pick_selection(game))%></div>
          <div class="divTableCell"><%= team_name(users_spread_pick_selection(game))%></div>
          <% end %>
          <!-- If Game is not Active you should still show full table except last column (selection) -->

        </div>
      <% end %>
    <% end %>
  </div>
  </div>
</div>

