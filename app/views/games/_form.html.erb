<%= form_for @game, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :points, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :points, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_home_team, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :is_home_team, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :spread, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :spread, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :home_team_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :home_team_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :away_team_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :away_team_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :home_team_pref_pick, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :home_team_pref_pick, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :away_team_pref_pick, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :away_team_pref_pick, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :home_team_spread_pick, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :home_team_spread_pick, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :away_team_spread_pick, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :away_team_spread_pick, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :home_team_covered_spread, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :home_team_covered_spread, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :away_team_covered_spread, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :away_team_covered_spread, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tie_game, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :tie_game, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :game_selected_by_admin, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :game_selected_by_admin, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  games_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
